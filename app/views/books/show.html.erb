<main>
   <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
　<% end %> 
　
<%= render 'books/list', book: @newbook %>

<h2>Book detail</h2>
<tbody>
  <tr>
    <td>
      <%= link_to user_path(@user.id) do %>
      <%=  attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
      <% end %>
      <br>
      <%= link_to @user.name, user_path(@user.id) %>
    </td>
    <td>
      <%= link_to @book.title, book_path(@book), class: "show_#{@book.id}" %>
    </td>
    <td><%= @book.body %></td>
    <td>
      <% if @book.user_id == current_user.id %>
      <%= link_to "編集", edit_book_path %>
      <%= link_to "削除", book_path(@book), method: :delete, data: {confirm: "Are you sure？"} %>
      <% end %>
    </td>
  </tr>
</tbody>
</main>