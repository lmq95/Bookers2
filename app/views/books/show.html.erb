<main>
   <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
　<% end %> 

<h2>New Book</h2>
<%= form_with model:book, class: 'new_book', local:true do |f| %>
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>


<h2>Book detail</h2>
<tbody>
  <tr>
    <td>
      <%= link_to @book.title, book_path(@book), class: "show_#{@book.id}" %>
    </td>
    <td><%= @book.body %></td>
    <td>
      <% if @book.user_id == current_user.id %>
      <%= link_to "編集", edit_book_path %>
      <%= link_to "削除", book_path(@book), method: :delete, data: {confirm: "Are you sure？"} %>
      <% end %>
    </td>
  </tr>
</tbody>