<h2>User info</h2>
  <table>
    <tbody>
      <tr><%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
      </tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>

    <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>

<h2>New book</h2>
<%= form_with model:book, class: 'new_book', local:true do |f| %>
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label for="book_body">Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>