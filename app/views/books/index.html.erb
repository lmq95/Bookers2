<h2>New Book</h2>
<%= form_with model:book, class: 'new_book', local:true do |f| %>
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
   <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
              <%=  attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
          </td>
          <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
          <td><%= book.body %></td>
     <% end %>
    </tbody>
  </table>
