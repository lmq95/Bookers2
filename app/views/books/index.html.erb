<main>
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
　<% end %>
　
<%= render 'books/list', book: @book %>
  
  <table>
   <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
              <%=  attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
          </td>
          <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
          <td><%= book.body %></td>
     <% end %>
    </tbody>
  </table>
  </main>