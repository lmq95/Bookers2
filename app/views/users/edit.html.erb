<h2>User info</h2>

 <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model:@user, local:true do |f| %>
  <div class="form-group">
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus: true, id:"user_name" %>
  </div>
  <div class="form-group">
    <label for="inputImage">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>
  <div class="form-group">
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction, rows:'2', autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.submit "Update User" %>
  </div>
<% end %>
